{
	"name": "polafaux",
	"displayName": "PolaFaux",
	"publisher": "Elinks",
	"description": "Turn real code into faux code as SVG",
	"version": "1.0.1",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/ElinksFr/Polafaux"
	},
	"engines": {
		"vscode": "^1.45.0"
	},
	"keywords": [
		"polafaux",
		"capture",
		"screenshot",
		"snippet",
		"share",
		"svg",
		"style"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:polafaux.activate",
		"onWebviewPanel:polafaux"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "polafaux.activate",
				"title": "PolaFaux ðŸ“Š"
			}
		],
		"configuration": {
			"title": "Polafaux",
			"properties": {
				"polafaux.themeName": {
					"type": "string",
					"description": "Color theme used to generate the svg",
					"default": "atom-one-dark-reasonable"
				},
				"polafaux.fontSize": {
					"type": "number",
					"description": "Line thickness and width",
					"default": 5
				},
				"polafaux.leading": {
					"type": "number",
					"description": "Space between lines",
					"default": 10
				},
				"polafaux.lineCap": {
					"type": "string",
					"description": "Line aspect `square` or `round`",
					"default": "round",
					"enum": [
						"round",
						"square"
					]
				},
				"polafaux.margin": {
					"type": "number",
					"description": "Space between canvas edges and code block",
					"default": 50
				},
				"polafaux.lineNumbers": {
					"type": "boolean",
					"description": "Whether or not to include line numbers",
					"default": false
				},
				"polafaux.lineNumberOffset": {
					"type": "number",
					"description": "Line number offset from margin",
					"default": -3
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^4.2.11",
		"@types/glob": "^7.1.1",
		"@types/highlight.js": "^9.12.4",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"bufferutil": "^4.0.1",
		"canvas": "^2.5.0",
		"chai": "^4.2.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"is-svg": "^4.2.1",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"utf-8-validate": "^5.0.2",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"highlight.js": "^10.0.3",
		"jsdom": "^16.5.0",
		"postcss": "^7.0.30"
	}
}